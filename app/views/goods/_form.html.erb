<style type="text/css">
  .mode{
    width: 80px!important;
  }
</style>
<%= form_for(@good) do |f| %>
    <% if @good.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@good.errors.count, "error") %> prohibited this good from being saved:</h2>

          <ul>
            <% @good.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="zmwy-search">

      <ul>
        <li class="zmwy-li">
          <label>商品编码:</label>
          <%= f.text_field :code %>
        </li>
        <li class="clearfix"></li>
        <li class="zmwy-li">
          <label>商品名称:</label>
          <%= f.text_field :name %>
        </li>
        <li class="clearfix"></li>
        <li class="zmwy-li">
          <label>产品单价:</label>
          <%= f.number_field :price,:min=>0.01,:step=>0.01 %>
        </li>
        <li class="clearfix"></li>
        <li class="zmwy-li">
          <label>商品类型:</label>
          <%= f.select :kind,[['成品','1'],['半成品','0']] %>
        </li>
        <li class="clearfix"></li>
        <li class="zmwy-li" style="width: 600px;">
          <label>规格:</label>
          <%= f.number_field :mode_count,:class=>'mode' %><%= f.text_field :mode_desc,:class=>'mode' %>
          例如：<span style="border: 1px solid black;padding: 2px 2px;">40</span>&nbsp;&nbsp;<span style="border: 1px solid black;padding: 2px 2px;">箱/件</span>
        </li>
        <li class="clearfix"></li>
        <li class="zmwy-li-long">
          <label>备注:</label>
          <%= f.text_field :remark %>
        </li>
        <li class="clearfix"></li>
        <li class="zmwy-li-operation">
          <%= f.submit '保存' %>
        </li>
      </ul>

    </div>

<% end %>
