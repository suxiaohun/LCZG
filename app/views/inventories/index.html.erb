<%= link_to '添加库存', new_inventory_path, {:class => 'btn btn-primary'} %>
<%= link_to '打印库存状况表', {:action => 'print_inventory'}, {:class => 'btn btn-success'} %>
<%= link_to '出入库明细记录', {:action => 'inv_records'}, {:class => 'btn btn-warning'} %>


<table class="table table-striped">
  <thead>
  <tr>
    <th>商品编码</th>
    <th>商品名称</th>
    <th>库存量</th>
    <th>商品成本单价(平均)</th>
    <th>成本金额</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.good_code %></td>
        <td><%= inventory.good_name %></td>
        <td><%= inventory.count %></td>
        <td><%= inventory.price.round(2) %></td>
        <td><%= inventory.amount %></td>
        <td><%= link_to '编辑', edit_inventory_path(inventory) %></td>
        <td><%= link_to '删除', inventory, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @inventories %>
